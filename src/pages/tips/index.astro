---
import Layout from "../../layouts/Layout.astro";
import { getSortedTips } from "../../utils/content";
import { formatDate } from "../../utils/dates";

const allTips = await getSortedTips();
---

<Layout>
	<main class="max-w-3xl mx-auto p-4">
		<h1 class="text-4xl font-bold mb-8 text-center">Archivo de Tips</h1>
		<div class="grid gap-6">
			{
				allTips.map((tip) => (
					<a
						href={`/tips/${tip.slug}`}
						class="block border p-6 rounded-lg hover:shadow-lg transition-shadow"
					>
						<h2 class="text-2xl font-semibold mb-2 text-blue-600">
							{tip.data.title}
						</h2>
						<p class="text-gray-700 mb-3">{tip.data.description}</p>
						<p class="text-sm text-gray-500">
							Publicado el: {formatDate(tip.data.pubDate)}
						</p>
					</a>
				))
			}
		</div>
	</main>
</Layout>
